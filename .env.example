# OpenDirectory Environment Configuration
# Copy this file to .env and update with your values
# IMPORTANT: Change all default passwords and secrets in production!

# ===================
# Environment
# ===================
NODE_ENV=development
LOG_LEVEL=info

# ===================
# Database Configuration
# ===================
DB_PASSWORD=changeme
MONGO_PASSWORD=changeme
REDIS_PASSWORD=changeme
RABBITMQ_PASSWORD=changeme

# ===================
# LDAP Configuration
# ===================
LLDAP_JWT_SECRET=super_secret_random_string_change_this
LLDAP_ADMIN_PASSWORD=changeme

# ===================
# Security
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ===================
# Service URLs
# ===================
API_GATEWAY_URL=http://localhost:3000
API_BACKEND_URL=http://localhost:8080
AUTH_SERVICE_URL=http://localhost:3002
IDENTITY_SERVICE_URL=http://localhost:3001
DEVICE_SERVICE_URL=http://localhost:3003
POLICY_SERVICE_URL=http://localhost:3004

# ===================
# Frontend Configuration
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# ===================
# Email Configuration (Optional)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=OpenDirectory <notifications@example.com>

# ===================
# Storage Configuration (Optional)
# ===================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=opendirectory

# ===================
# CORS & Security
# ===================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===================
# Monitoring (Optional)
# ===================
GRAFANA_PASSWORD=admin
PROMETHEUS_ENABLED=true
METRICS_PORT=9091

# ===================
# Feature Flags
# ===================
FEATURE_MDM_ENABLED=true
FEATURE_CONDITIONAL_ACCESS_ENABLED=true
FEATURE_CERTIFICATE_MANAGEMENT_ENABLED=true
FEATURE_UPDATE_MANAGEMENT_ENABLED=true
FEATURE_PRINT_MANAGEMENT_ENABLED=true
FEATURE_LICENSE_MANAGEMENT_ENABLED=true