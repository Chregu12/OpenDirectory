# OpenDirectory Environment Variables
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database
DB_PASSWORD=changeme
MONGO_PASSWORD=changeme
REDIS_PASSWORD=changeme

# Message Queue
RABBITMQ_PASSWORD=changeme

# LDAP
LLDAP_JWT_SECRET=super_secret_random_string_change_me_in_production
LLDAP_ADMIN_PASSWORD=changeme

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_me
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Keycloak
KEYCLOAK_ADMIN_PASSWORD=changeme
KEYCLOAK_CLIENT_SECRET=changeme

# Authentik
AUTHENTIK_SECRET_KEY=changeme_to_random_50_char_string
AUTHENTIK_ERROR_REPORTING__ENABLED=false

# Grafana
GRAFANA_PASSWORD=changeme

# API URLs
API_URL=http://localhost
AUTH_URL=http://localhost:3002
IDENTITY_URL=http://localhost:3001
DEVICE_URL=http://localhost:3003
POLICY_URL=http://localhost:3004

# Frontend
NEXT_PUBLIC_API_URL=http://localhost
NEXT_PUBLIC_AUTH_URL=http://localhost:3002
NEXT_PUBLIC_WS_URL=ws://localhost

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@opendirectory.local

# Storage (Optional)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=opendirectory

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9091
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_SSO_ENABLED=true
FEATURE_AUDIT_ENABLED=true
FEATURE_DEVICE_MANAGEMENT_ENABLED=true