{
  "name": "@opendirectory/remote-control-service",
  "version": "1.0.0",
  "description": "OpenDirectory Remote Control Service - Desktop, Screen Sharing, File Transfer & Command Execution",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:desktop": "node src/services/remoteDesktopService.js",
    "start:screen": "node src/services/screenSharingService.js",
    "start:transfer": "node src/services/fileTransferService.js",
    "start:command": "node src/services/commandExecutionService.js",
    "start:session": "node src/services/sessionManagementService.js",
    "start:all": "concurrently \"npm run start:desktop\" \"npm run start:screen\" \"npm run start:transfer\" \"npm run start:command\" \"npm run start:session\"",
    "dev": "concurrently \"nodemon src/services/remoteDesktopService.js\" \"nodemon src/services/screenSharingService.js\" \"nodemon src/services/fileTransferService.js\" \"nodemon src/services/commandExecutionService.js\" \"nodemon src/services/sessionManagementService.js\"",
    "test": "jest",
    "lint": "eslint src/",
    "docker:build": "docker build -t opendirectory/remote-control .",
    "docker:run": "docker run -p 3019:3019 -p 3020:3020 -p 3021:3021 -p 3022:3022 -p 3023:3023 opendirectory/remote-control"
  },
  "keywords": [
    "opendirectory",
    "remote-control",
    "remote-desktop",
    "vnc",
    "rdp",
    "screen-sharing",
    "file-transfer",
    "command-execution",
    "session-management",
    "webrtc",
    "mobile-control",
    "enterprise",
    "security",
    "audit"
  ],
  "author": "OpenDirectory Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "node-ssh": "^13.1.0",
    "vnc2": "^1.7.0",
    "node-rdpjs": "^0.3.2",
    "wrtc": "^0.4.7",
    "simple-peer": "^9.11.1",
    "ffmpeg": "^0.0.4",
    "sharp": "^0.33.1",
    "canvas": "^2.11.2",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.0",
    "child_process": "^1.0.2",
    "ssh2": "^1.15.0",
    "sftp": "^0.5.6",
    "bcryptjs": "^2.4.3",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "ldapjs": "^3.0.7",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}