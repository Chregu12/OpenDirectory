{
  "name": "@opendirectory/api-gateway",
  "version": "2.0.0",
  "description": "Auto-extending API Gateway with service discovery for OpenDirectory",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "services": "curl -s http://localhost:3000/services | jq",
    "metrics": "curl -s http://localhost:3000/metrics | jq"
  },
  "keywords": [
    "api-gateway",
    "service-discovery",
    "load-balancer",
    "microservices",
    "opendirectory"
  ],
  "author": "OpenDirectory Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "http-proxy-middleware": "^2.0.6",
    "ws": "^8.14.2",
    "axios": "^1.6.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@eslint/js": "^8.54.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opendirectory/api-gateway"
  }
}